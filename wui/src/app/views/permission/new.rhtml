<div id="left">
<h2><%= _("New Permission") %></h2>

<% form_tag :action => 'create' do %>
  <%= render :partial => 'form' %>
  <%= submit_tag "Create" %>
<% end %>

</div>

<div id="right">
  <h2>Actions</h2>
  <ul class="actions">
    <li class="action"><%= link_to "Back to #{@permission.hardware_pool.name}", { :controller => 'pool', :action => 'show', :id => @permission.hardware_pool_id }, { :class => "show" } if @permission.hardware_pool %></li>
    <li class="action"><%= link_to "Back to #{@permission.vm_library.name}", { :controller => 'library', :action => 'show', :id => @permission.vm_library_id }, { :class => "show" } if @permission.vm_library %></li>
  </ul>
</div>

