<div id="left">
<h2><%= _("Host") %></h2>

<table>
<% for column in Host.content_columns %>
  <tr class="<%= cycle('odd','even') %>">
  <td><b><%= column.human_name %>:</b></td><td><%=h @host.send(column.name) %></td>
</p>
<% end %>
</table>

<h3>Network Interfaces</h3>
<% if !@host.nics.empty? %>
  <%= render :partial => "/nic/list", :locals => { :nics => @host.nics } %>
<% else %>
<p>No Network Interfaces, perhaps you should <%= link_to 'add one', { :controller => "nic", :action => 'new', :host_id => @host }, { :class => "create" } %>?</p>
<% end %>

<h3>Storage Volumes</h3>
<% if !@host.storage_volumes.empty? %>
  <%= render :partial => "/storage/list", :locals => { :storage_volumes => @host.storage_volumes, :remove_from_host => true, :host => @host, :host_id => @host.id } %>
<% else %>
<p>No attached Storage Volumes, perhaps you should <%= link_to 'attach one', { :controller => "storage", :action => 'list', :attach_to_host => @host }, {:class => "attach" } %>?</p>
<% end %>

</div>

<div id="right">
  <h2>Actions</h2>
  <ul class="actions create">
  <li class="action"><%= link_to 'Add Network Interface', { :controller => "nic", :action => 'new', :host_id => @host }, { :class => "create" } %></li>
  <li class="action"><%= link_to 'Attach Storage Volume', { :controller => "storage", :action => 'list', :attach_to_host => @host }, {:class => "attach" } %></li>
  </ul>
  <ul class="actions edit">
  <li class="action"><%= link_to 'Edit Host', { :action => 'edit', :id => @host }, { :class => "edit" } %></li>
  </ul>
  <ul class="actions remove">
  <li class="action"><%= link_to 'Delete Host', { :action => 'destroy', :id => @host }, :confirm => 'Are you sure?', :method => :post, :class => "remove" %></li>
  </ul>
  <ul class="actions">
    <li class="action"><%= link_to 'List All Hosts', { :action => 'list'}, { :class => "list" } %></li>
  </ul>
  </ul>
</div>
