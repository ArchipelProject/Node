<div id="left">
<h2>New <%= @hardware_pool.get_type_label %></h2>

<% form_tag :action => 'create' do %>
  <%= render :partial => 'form' %>
  <%= submit_tag "Create" %>
<% end %>

</div>

<div id="right">
  <h2>Actions</h2>
  <ul class="actions">
    <%if @hardware_pool.superpool -%>
      <li class="action"><%= link_to "Back to #{@hardware_pool.superpool.name}", { :action => 'show', :id => @hardware_pool.superpool_id}, { :class => "list" } %></li>
    <% end -%>
  </ul>
</div>

