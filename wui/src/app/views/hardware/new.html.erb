    <div id="data">
      <div class="inside">

          <div id="dataTableWrapper">

          <div class="dataTable">
              <div class="inside">

                <div class="data-table-column">
                <% form_tag :action => 'create', :id => @pool do %>
                  <%= render :partial => 'form' %>
                  <%= submit_tag 'Create Hardware Pool' %>
                <% end %>
               </div>

                <div class="data-table-column">
                  <strong class="header">Current Hardware Pool (<%= @pools.size %>)</strong>
                  <% for pool in @pools %>
                  <div class="hardware-item"><%= link_to pool.name, { :controller => "hardware", :action => "show", :id => pool }, { } %></div>
                  <% end %>
                </div>

              </div> <!-- end #data-table.inside -->
            </div> <!-- end #dataTable -->

          </div> <!-- end #dataTableWrapper -->

      </div> <!-- end #data.inside -->
      </div> <!-- end #data -->

  </td>
  <td id="right">
          <div class="heading">&nbsp;</div>
          <div class="tools">

          <h3>Actions</h3>
            <div class="actions">
              <%= link_to "Back to #{@pool.superpool.name}", { :controller => 'hardware', :action => 'show', :id => @pool.superpool }, { :class => "" } if @pool.superpool %>
            </div>
          </div> <!-- end #tools -->
  </td>

<%- content_for :title do -%>
<%= _("Create Hardware Pool") %>
<%- end -%>

