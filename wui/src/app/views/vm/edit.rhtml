<div id="left">
<h2><%= _("Editing Virtual Machine") %></h2>

<% form_tag :action => 'update', :id => @vm do %>
  <%= render :partial => 'form' %>
  <%= submit_tag 'Edit' %>
<% end %>

</div>

<div id="right">
  <h2>Actions</h2>
  <ul class="actions">
    <li class="action"><%= link_to 'Show', { :action => 'show', :id => @vm }, { :class => "show" } %></li>
    <li class="action"><%= link_to 'List All VMs', { :action => 'list' }, { :class => "list" } %></li>
  </ul>
</div>
