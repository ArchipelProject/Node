<div id="left">
<h2><%= _("Editing Virtual Machine") %></h2>

<% form_tag :action => 'update', :id => @vm do %>
  <%= render :partial => 'form', :locals => { :create => false } %>
  <%= submit_tag 'Edit' %>
<% end %>

</div>

<div id="right">
  <h2>Actions</h2>
  <ul class="actions">
    <li class="action"><%= link_to 'Show', { :action => 'show', :id => @vm }, { :class => "show" } %></li>
    <%if @vm.vm_library  -%>
       <li class="action"><%= link_to 'Back to Vm Library', { :controller => 'library', :action => 'show', :id => @vm.vm_library_id }, { :class => "show" } %></li>
    <% end  -%>
    <%if @vm.host  -%>
      <li class="action"><%= link_to 'Back to Host', { :controller => 'host', :action => 'show', :id => @vm.host_id }, { :class => "show"  } %></li>
    <% end  -%>
  </ul>
</div>
